<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homebg"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#3fffffff"
        android:layout_height="300dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:id="@+id/username"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="100dp"
            android:fontFamily="sans-serif-condensed"
            android:text="PROFILE NAME"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/emailid"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="username@gmaeil.com"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:id="@+id/semster"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:text="semster"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/countryy"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-condensed"
            android:text="contry"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/nation"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:text="nation"/>
        <ImageView
            android:layout_width="@dimen/_30dp"
            android:id="@+id/editprofle"
            android:background="@drawable/editic"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/edittext_bg"
            android:text="About"
            android:id="@+id/aboutpge"
            android:layout_marginRight="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:text="logout"
            android:id="@+id/logout"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/edittext_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/bottmnav"
            android:background="#de2b2a2a"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:menu="@menu/menu_item"
            android:layout_height="wrap_content"></android.support.design.widget.BottomNavigationView>
    </RelativeLayout>
    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/pbar"
        />

</LinearLayout>