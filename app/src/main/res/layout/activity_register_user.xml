<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/loginback"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Register_user">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER USER"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:textSize="@dimen/_30dp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittext_bg"
                android:hint="Name"
                android:padding="10dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:hint="Email"
                android:padding="10dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:textColorHint="@color/white"
                android:textColor="@color/white"

                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:hint="Password"
                android:padding="10dp" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Gender" />

            <RadioGroup
                android:id="@+id/radiogp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edittext_bg"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="Male" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_height="wrap_content"
                    android:text="female" />
            </RadioGroup>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/nation"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:hint="Nationality"
                android:padding="10dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinnedittext_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

            <Spinner
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"></Spinner>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/icddownarrow"/>
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinnedittext_bg"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">
            <Spinner
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/icddownarrow"/>
            </FrameLayout>


            <android.support.design.widget.TextInputEditText
                android:id="@+id/mobilenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:inputType="text"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:hint="Mobile number"
                android:padding="10dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/whatsappno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="text"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:hint="Whats app number"
                android:padding="10dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/residenceno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:hint="residence no"
                android:padding="10dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/officeno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:inputType="text"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg"
                android:hint="Office Number"
                android:padding="10dp" />

            <Button
                android:id="@+id/registeruser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_bg"
                android:text="Register" />


        </LinearLayout>

    </ScrollView>



    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/pbar"
        />






</RelativeLayout>